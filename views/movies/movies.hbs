{{#each result}}
<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <a href="film/{{this._id}}">See more</a>
            </div>
        </div>
    </div>
</div>
{{/each}}